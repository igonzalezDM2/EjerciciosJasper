<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <center>
      <TabPane prefHeight="200.0" prefWidth="473.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Productos">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <FlowPane alignment="CENTER" prefHeight="168.0" prefWidth="474.0">
                           <children>
                              <Button fx:id="btn1" mnemonicParsing="false" onAction="#accion1" text="Listar productos" />
                           </children>
                        </FlowPane>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Secciones">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <FlowPane alignment="CENTER" prefHeight="169.0" prefWidth="474.0">
                           <children>
                              <Button fx:id="btn2" mnemonicParsing="false" onAction="#accion2" text="Productos de secciones" />
                           </children>
                        </FlowPane>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Tabla producto">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <FlowPane alignment="CENTER" prefHeight="169.0" prefWidth="474.0">
                           <children>
                              <Button fx:id="btn3" mnemonicParsing="false" onAction="#accion3" text="Tabla de productos" />
                           </children>
                        </FlowPane>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Graficos">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <FlowPane alignment="CENTER" layoutX="-1.0" layoutY="1.0" prefHeight="166.0" prefWidth="474.0">
                           <children>
                              <Button fx:id="btn4" mnemonicParsing="false" onAction="#accion4" text="Informe de unidades disponibles" />
                           </children>
                        </FlowPane>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
